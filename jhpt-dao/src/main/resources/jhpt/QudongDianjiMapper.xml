<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tyj.jhpt.dao.QudongDianjiMapper">
    <resultMap id="ExtBaseResultMap" type="com.tyj.jhpt.bo.QudongDianji">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="car_vin" property="carVin" jdbcType="VARCHAR" />
        <result column="event_time" property="eventTime" jdbcType="TIMESTAMP" />
        <result column="seq" property="seq" jdbcType="TINYINT" />
        <result column="status" property="status" jdbcType="TINYINT" />
        <result column="control_temperature" property="controlTemperature" jdbcType="TINYINT" />
        <result column="speed" property="speed" jdbcType="INTEGER" />
        <result column="zhuanju" property="zhuanju" jdbcType="INTEGER" />
        <result column="temperature" property="temperature" jdbcType="TINYINT" />
        <result column="dianya" property="dianya" jdbcType="INTEGER" />
        <result column="dianliu" property="dianliu" jdbcType="INTEGER" />
        <result column="plate_no" property="plateNo" jdbcType="VARCHAR" />
    </resultMap>
    <select id="findPageQudongDianji" resultMap="ExtBaseResultMap">
        select
        a.`id`, a.`car_vin`, a.`event_time`, a.`seq`, a.`status`, a.`control_temperature`, a.`speed`, a.`zhuanju`, a.`temperature`, a.`dianya`, a.`dianliu`, b.`plate_no`
        from `tb_qudong_dianji` a
        join `tb_device_info` b on a.`car_vin` = b.`car_vin`
        <where>
            <if test="plateNo != null and plateNo != ''">
                and b.`plate_no` like CONCAT('%', #{plateNo}, '%')
            </if>
            <if test="startDate != null and startDate != ''">
                AND a.`event_time` &gt;= #{startDate}
            </if>
            <if test="endDate != null and endDate != ''">
                AND a.`event_time` &lt;= #{endDate}
            </if>
        </where>
    </select>
</mapper>