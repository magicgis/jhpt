<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tyj.jhpt.dao.UserInfosMapper">
    <select id="findUserByMap" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from `user_infos`
        <where>
            <if test="userName != null and userName != ''">
                AND `user_name` = #{userName}
            </if>
            <if test="userPassword != null and userPassword != ''">
                AND `password` = #{userPassword}
            </if>
        </where>
    </select>
    <resultMap id="ExtBaseResultMap" type="com.tyj.jhpt.bo.UserInfos">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="real_name" property="realName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="salt" property="salt" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="TINYINT" />
        <result column="creator_id" property="creatorId" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="roleId" property="roleId" jdbcType="INTEGER" />
        <result column="roleName" property="roleName" jdbcType="VARCHAR" />
        <result column="userRoleId" property="userRoleId" jdbcType="INTEGER" />
        <result column="auth_id" property="authId" jdbcType="INTEGER" />
    </resultMap>
    <select id="findPageUser" resultMap="ExtBaseResultMap">
        SELECT
        a.*,
        c.id roleId,
        c.name roleName,
        b.id userRoleId
        FROM
        user_infos a
        left join user_roles b
        ON a.id = b.user_id
        left join roles c
        on b.role_id = c.id
        <where>
            <if test="keyword != null and keyword != ''">
                and (a.`user_name` like CONCAT('%', #{keyword}, '%')
                or a.`real_name` like CONCAT('%', #{keyword}, '%'))
            </if>
        </where>
    </select>
</mapper>